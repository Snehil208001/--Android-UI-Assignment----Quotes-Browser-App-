<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.quotesbrowserapp.HomeFragment"
        android:label="Quotes"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_Home_to_Detail"
            app:destination="@id/DetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/DetailFragment"
        android:name="com.example.quotesbrowserapp.DetailFragment"
        android:label="Quote Details"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="quoteId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/FavoritesFragment"
        android:name="com.example.quotesbrowserapp.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/action_Favorites_to_Detail"
            app:destination="@id/DetailFragment" />
    </fragment>
</navigation>